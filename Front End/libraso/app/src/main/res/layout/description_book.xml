<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="284dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="400dp"
            android:layout_height="300dp"
            android:layout_weight="1"
            tools:srcCompat="@tools:sample/avatars" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <TextView
                android:id="@+id/book_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="70dp"
                android:text="Shoe dog : a memoir by the creator of Nike"
                android:textAlignment="center"
                android:textAllCaps="true"
                android:textSize="24sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/By"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@id/book_title"
                android:layout_marginLeft="10dp"
                android:layout_marginBottom="-31dp"
                android:text="By-"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/author"
                android:layout_width="149dp"
                android:layout_height="wrap_content"
                android:layout_alignRight="@id/By"
                android:layout_alignBottom="@id/book_title"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="-150dp"
                android:layout_marginBottom="-31dp"
                android:text="Knight, Philip H."
                android:textSize="20sp" />

            <TextView
                android:id="@+id/textView15"
                android:layout_width="197dp"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@id/By"
                android:layout_marginBottom="-32dp"
                android:text="TextView" />

            <Button
                android:id="@+id/button"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@id/author"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="35dp"
                android:layout_marginBottom="-97dp"
                android:text="Place Book On Hold" />

        </RelativeLayout>

    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="262dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="112dp"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/edition"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="edition" />

            <TextView
                android:id="@+id/ISBN"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="ISBN" />

            <TextView
                android:id="@+id/Subjects"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Subjects" />

            <TextView
                android:id="@+id/description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="description" />
        </LinearLayout>
    </ScrollView>

    <RatingBar
        android:id="@+id/ratingBar"
        android:layout_width="wrap_content"
        android:layout_height="46dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="57dp"
        android:max="5"
        android:numStars="5" />

    <Button
        android:id="@+id/button2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@id/ratingBar"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="269dp"
        android:layout_marginBottom="56dp"
        android:text="Button" />

</RelativeLayout>